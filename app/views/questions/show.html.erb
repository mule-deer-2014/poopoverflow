<div class="container bg-poop">
  <div class="jumbotron alert-warning">
  <h2><%= @question.title %> <%= link_to "Edit", edit_question_path(@question),class:"btn btn-sm btn-success" %>
  </h2>
  <hr>
  <h3><%= @question.body %></h3>
  <ul>
    <% @question.comments.each do |c| %>
      <li>Question Comment: <%= c.body %></li>
    <% end %>
  </ul>
  <ul>
    <% @question.answers.each do |a| %>
      <li>Answer: <%= a.body %></li>

      <ul>
        <% a.comments.each do |c| %>
          <li>Answer Comment: <%= c.body %></li>
        <% end %>
      </ul>
    <% end %>
  </ul>
  </div>
</div>