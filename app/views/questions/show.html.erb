<div class="container">
  <h1><%= @question.title %> <%= link_to "Edit", edit_question_path(@question),class:"btn btn-lg btn-success" %><%= link_to "Answer",new_question_answer_path(@question)%>
</h1>
    <h3><%= @question.body %></h3>
  <ul>
    <% @question.comments.each do |c| %>
      <li>Question Comment: <%= c.body %></li>
    <% end %>
  </ul>

  <ul>
    <% @question.answers.each do |a| %>
      <li>Answer: 
        <%= a.body %>
          <%= form_tag(answer_path(a), method: "delete") do %>
          <input type="hidden" value = "<%=@question.id%>" name = "question_id">
          <%= submit_tag("Delete") %>
        <% end %>
      </li>
      <ul>
        <% a.comments.each do |c| %>
          <li>Answer Comment: <%= c.body %></li>
        <% end %>
      </ul>
    <% end %>
  </ul>
</div>