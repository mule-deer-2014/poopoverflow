<div class="container bg-poop">
  <div class="jumbotron alert-warning">
  <h2>New Question</h2>
  <hr>
    <%= form_for @question, role:"form" do |f|%>
      <div class="form-group">
        <%= f.label :title%>
        <%= f.text_field :title, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :body%>
        <%= f.text_area :body, class:"form-control"%>
      </div>
      <%= f.submit "Submit", class:"btn btn-md btn-success"%>
    <% end %>
  </div>
</div>