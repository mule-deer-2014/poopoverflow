<h1>Poop Overflow</h1>
<h3>Questions</h3>
<%= link_to 'Create New Question', new_question_path %>
<ul>
  <% @questions.each do |q| %>
    <li><%= link_to q.title, question_path(q) %></li>
    <p>Number of answers: <%= q.answers.count %></p>
    <p>Number of comments: <%= q.comments.count %></p>
  <% end %>
</ul>
